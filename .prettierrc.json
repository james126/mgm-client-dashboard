{
	"editor.formatOnSave": true,
	"singleQuote": true,
	"trailingComma": "all",
	"tabWidth": 4,
	"printWidth": 100,
	"semi": false,
	"overrides": [
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript",
				"plugins": ["prettier-plugin-sort-imports"],
				"bracketSameLine": true
			}
		}
	]
}
